<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RedRip</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/uikit.min")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">

                <!--Icon link-->
                <a class="navbar-brand" href="#">
                    <img alt="Brand" width="30px" height="25px" src="~/Content/Images/New icon.png" />
                    @Html.ActionLink("Redrip", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </a>

                <!-- Responsive switch button-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <!--Contains Pages : Home, About and Contact -->
                    <li class="navbar-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Home
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </li>


                    <!--Will Contains Pages: Teacher Profiles, Teacher Reviews and Courese Taught by Teachers-->
                    <li class="navbar-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Meet The Teachers
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li>@Html.ActionLink("Teachers", "Index", "Home")</li>
                            <li>@Html.ActionLink("Course", "About", "Home")</li>
                        </ul>
                    </li>


                    <!--Will Contain Pages : Guides, Tips and ??-->
                    <li class="navbar-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Get Help
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li>@Html.ActionLink("Guides", "Index", "Home")</li>
                            <li>@Html.ActionLink("Forum", "About", "Home")</li>
                            <li>@Html.ActionLink("Hot Tips", "Contact", "Home")</li>
                        </ul>
                    </li>
                </ul>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content ">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RedRip</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/uikit")
    @Scripts.Render("~/bundles/uikit-icons")
    @RenderSection("scripts", required: false)
</body>
</html>
